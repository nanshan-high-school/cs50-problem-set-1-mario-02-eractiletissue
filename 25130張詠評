#include <iostream>
using namespace std;

int main() { 
 int height;
  cout << "請輸入數字";
  cin >> height;
    int k,i,j ;
     for ( i = 0; i <height+1 ; i++) {
       for ( j = height+1; i < j; j-- ) {
        cout <<" "; }
          for ( k=0; k<i ; k++) {
           cout <<"#"; }
        cout << "\t";
        for ( k=0; k<i ; k++) {
            cout <<"#";
  }
  cout <<"\n";
     }
  return 0;
}
